@model EcuAsistencias.Models.Asistencia

@{
    ViewBag.Title = "RegistrarEntrada";
}

<h2>Registro de Asistencia</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        <div class="form-group">
            
            <div class="col-md-offset-2 col-md-10">
                <label>Hora Actual</label>
                <input type="time" value=@DateTime.Now.ToString("HH:mm") class="btn btn-default" readonly />
            </div>
        </div>
       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ingresar" class="btn btn-default" name="action" />
                <input type="submit" value="Salir" class="btn btn-default" name="action" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
