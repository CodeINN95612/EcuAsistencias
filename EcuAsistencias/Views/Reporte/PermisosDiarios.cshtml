@model IEnumerable<EcuAsistencias.Core.ReportModels.ReportePermisosDiariosModel>

@{
	ViewBag.Title = "Reporte Permisos Diarios";
}

<h2>Reporte Permisos Diarios</h2>

<hr />
<h4>Filtros de Búsqueda</h4>
@using (Html.BeginForm(null, null, FormMethod.Get))
{
	<input type="date" name="fechaDia" />
	<input type="submit" value="Buscar" name="accion" />
}
<hr />

<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Identificacion)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Nombre)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.PidioPermiso)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.HoraInicioPermiso)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.HorasPermiso)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Motivo)
		</th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Identificacion)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Nombre)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.PidioPermiso)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.HoraInicioPermiso)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.HorasPermiso)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Motivo)
			</td>
		</tr>
	}

</table>
